    "version": "0.2.0",
    "configurations": [
        {
            "type": "jdk",
            "request": "launch",
            "mainClass": "${workspaceFolder}/src/com/oracle/javacard/sample/AMSWalletClient.java",
            "args": "-cap=${workspaceFolder}/../applet/deliverables/Wallet/com/oracle/jcclassic/samples/wallet/javacard/wallet.cap -props=${env:JC_HOME_SIMULATOR}/samples/client.config.properties",
            "vmArgs": "-Djava.library.path=${env:JC_HOME_SIMULATOR}/runtime/bin --module-path ${env:JC_HOME_SIMULATOR}/client/AMService:${env:JC_HOME_SIMULATOR}/client/COMService --add-modules ALL-MODULE-PATH",
            "windows": {
                "mainClass": "${workspaceFolder}\\src\\com\\oracle\\javacard\\sample\\AMSWalletClient.java",
                "args": "-cap=${workspaceFolder}\\..\\applet\\deliverables\\Wallet\\com\\oracle\\jcclassic\\samples\\wallet\\javacard\\wallet.cap -props=\"${env:JC_HOME_SIMULATOR}\\samples\\client.config.properties\"",
                "vmArgs": "-Djava.library.path=\"${env:JC_HOME_SIMULATOR}\\runtime\\bin\" --module-path \"${env:JC_HOME_SIMULATOR}\\client\\AMService;${env:JC_HOME_SIMULATOR}\\client\\COMService\" --add-modules ALL-MODULE-PATH",
            },            
            "name": "Run Java Card Client",
            "preLaunchTask": "Wait for Port 9025",
            "console": "internalConsole",
        },
    ],
}